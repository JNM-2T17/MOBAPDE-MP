<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectPlaylistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choicePanel">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/playlistButton"
            android:gravity="center"
            android:drawableTop="@android:drawable/ic_btn_speak_now"
            android:textSize="18sp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="Playlists"
            android:background="@drawable/background_gradient_2"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/allButton"
            android:gravity="center"
            android:drawableTop="@android:drawable/ic_media_play"
            android:textSize="18sp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="All Songs"
            android:background="@drawable/background_gradient_1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/albumButton"
            android:gravity="center"
            android:drawableTop="@android:drawable/ic_menu_slideshow"
            android:textSize="18sp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="Albums"
            android:background="@drawable/background_gradient_1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/artistButton"
            android:gravity="center"
            android:drawableTop="@android:drawable/ic_menu_myplaces"
            android:textSize="18sp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="Artists"
            android:background="@drawable/background_gradient_1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3.3333dp"
        android:background="@color/colorPrimaryDark"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/selectFragment">
    </RelativeLayout>

</LinearLayout>
